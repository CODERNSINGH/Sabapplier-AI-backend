# Django Configuration
SECRET_KEY=your-django-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (PostgreSQL for production)
AIVEN_SERVICE_PASSWORD=your-postgresql-password

# Email Configuration (Gmail SMTP)
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Dropbox Storage Configuration
DROPBOX_CLIENT_ID=your-dropbox-client-id
DROPBOX_CLIENT_SECRET=your-dropbox-client-secret
DROPBOX_REFRESH_TOKEN=your-dropbox-refresh-token

# Google AI Configuration (for OCR and Autofill)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# CORS Settings (Frontend domains)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Optional: Additional Configuration
CSRF_TRUSTED_ORIGINS=https://api.yourdomain.com,http://localhost:3000
